<% render 'pages/home' unless !user_signed_in? %>

<div id="pins" class="transitions-enabled">
	<% @pins.each do |pin| %>	
		<div class = "box panel panel-default"> 
		  <%= link_to image_tag(pin.image.url(:medium)), pin %>
			<div class="panel-body">
			  <%= pin.description %><!-- The equal sign is there to show something on the page-->
				<strong><%= pin.user.email if pin.user %></strong></br>
				<% if pin.user == current_user %>
					<div class="actions">
				    <%= link_to 'Edit', edit_pin_path(pin) %>
				    <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' 
							} do%>
								<span class="glyphicon glyphicon-trash"></span>ÃŸ
								Delete
							<% end %>
					</div>
				<% end %>
			</div>
		</div>
	<% end %>
</div>